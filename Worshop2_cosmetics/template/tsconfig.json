{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noEmitOnError": true,
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strictNullChecks": false,

    "strict": true,
    "strictPropertyInitialization": false,

    // "inlineSourceMap": true,              
